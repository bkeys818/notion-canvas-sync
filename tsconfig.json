{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        /* Emit */
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,

        /* Type Checking */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Interop Constraints */
        "esModuleInterop": true
    },
    "include": ["src"]
}
