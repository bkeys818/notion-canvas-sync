{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        /* Module */
        "module": "es2020",
        "moduleResolution": "node",

        /* Emit */
        "declaration": true,
        "outDir": "./dist",

        /* Type Checking */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"]
}
